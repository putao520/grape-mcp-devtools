# ===== 向量化配置 =====
# 向量化器类型: hybrid, cloud, local
VECTORIZER_TYPE=hybrid

# ===== OpenAI/NVIDIA API 配置 =====
# NVIDIA API 密钥 (推荐使用)
EMBEDDING_API_KEY=nvapi-your-key-here
# API 基础URL
EMBEDDING_API_BASE_URL=https://integrate.api.nvidia.com/v1
# 模型名称
EMBEDDING_MODEL_NAME=nvidia/nv-embedcode-7b-v1
# 向量维度
EMBEDDING_DIMENSIONS=768
# 请求超时时间(秒)
EMBEDDING_TIMEOUT_SECS=30

# ===== Qdrant 配置 =====
# Qdrant 运行模式: embedded(内嵌) 或 client(客户端)
QDRANT_MODE=embedded

# 内嵌模式配置
QDRANT_STORAGE_PATH=./data/qdrant
QDRANT_ENABLE_WEB=true
QDRANT_WEB_PORT=6333

# 客户端模式配置 (当 QDRANT_MODE=client 时使用)
QDRANT_URL=http://localhost:6334
QDRANT_API_KEY=

# 向量数据库通用配置
VECTOR_DB_COLLECTION_PREFIX=mcp_
VECTOR_DB_DISTANCE=Cosine
VECTOR_DB_RECREATE_COLLECTIONS=false
VECTOR_DIMENSION=768

# ===== 文件处理配置 =====
# 最大文件大小 (字节)
MAX_FILE_SIZE=1048576
# 分块大小 (字节)
CHUNK_SIZE=8192
# 分块重叠 (字节)
CHUNK_OVERLAP=512
# 最大并发文件数
MAX_CONCURRENT_FILES=10
# 向量化超时时间
VECTORIZATION_TIMEOUT_SECS=30

# ===== 缓存配置 =====
CACHE_TTL_SECS=86400
CACHE_MAX_SIZE_MB=500

# ===== 日志配置 =====
RUST_LOG=info

# 其他可选的云端API提供商配置:

# OpenAI 官方
# EMBEDDING_API_BASE_URL=https://api.openai.com/v1
# EMBEDDING_API_KEY=your-openai-api-key
# EMBEDDING_MODEL_NAME=text-embedding-ada-002
# EMBEDDING_DIMENSIONS=1536

# 智谱AI (GLM) - 中国大陆推荐
# EMBEDDING_API_BASE_URL=https://open.bigmodel.cn/api/paas/v4
# EMBEDDING_API_KEY=your-zhipu-api-key
# EMBEDDING_MODEL_NAME=embedding-2
# EMBEDDING_DIMENSIONS=1024

# 月之暗面 (Moonshot) - 中国大陆推荐
# EMBEDDING_API_BASE_URL=https://api.moonshot.cn/v1
# EMBEDDING_API_KEY=your-moonshot-api-key
# EMBEDDING_MODEL_NAME=moonshot-embedding
# EMBEDDING_DIMENSIONS=1536

# MCP 服务配置
MCP_SERVER_HOST=127.0.0.1
MCP_SERVER_PORT=8080 